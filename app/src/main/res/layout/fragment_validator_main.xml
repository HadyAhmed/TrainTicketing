<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".validator.view.navigation.ValidatorMainFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:padding="16dp"
            android:text="Today schedule :"
            android:textAppearance="?android:textAppearanceLarge" />
        <!-- TODO: add recycler view for daily schedule-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/placeHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/primary_light"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <TextView
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Trip From"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Ca"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Trip To"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:layout_row="0"
                    android:layout_column="3"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Ale"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Trip Starts "
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="11:00"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Reserved Tickets"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="35 Ticket"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black" />
            </GridLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/primary_light"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <TextView
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Trip From"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Ale"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Trip To"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:layout_row="0"
                    android:layout_column="3"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Ca"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Trip Starts "
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="14:30"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Reserved Tickets"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="21 Ticket"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black" />
            </GridLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</layout>
