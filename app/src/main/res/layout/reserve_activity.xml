<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/reserveAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/enquire_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                app:navigationIcon="?homeAsUpIndicator" />

        </com.google.android.material.appbar.AppBarLayout>

        <fragment
            android:id="@+id/reserveFragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/reserveAppBar"
            app:defaultNavHost="true"
            app:navGraph="@navigation/reservation_nav_graph"
            tools:layout="@layout/fragment_reservation_main" />
    </RelativeLayout>
</layout>